<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Html.Partial("~/Views/Shared/_AreasPartialRef.cshtml")
    @Html.Partial("~/Views/Shared/_AreasPartialAjax.cshtml")
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-default">
            <div class="navbar-header">
                <div class="navbar-brand">第3章</div>
            </div>
            <div class="navbar-collapse">
                @Html.Partial("ch03NavDemos")
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("返回主页", "MainIndex", "Home", new { area = "" }, null)</li>
                </ul>
                <ul id="loading" class="nav navbar-text navbar-right" style="display: none; color: red;">
                    <li>（正在加载，请稍等...）</li>
                </ul>
            </div>
        </nav>
    </div>
    <div class="container">
        <div class="panel panel-primary">
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-3">
                        @Html.Partial("ch03Demos")
                    </div>
                    <div id="bodyContent" class="col-md-9">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
